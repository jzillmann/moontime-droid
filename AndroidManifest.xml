<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="moontime.droid"
      android:versionCode="1" android:versionName="0.1.dev">
    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name="MoontimeApplication">
	    <activity android:name="WidgetConfigurationActivity">
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
		    </intent-filter>
		</activity>
        <receiver android:name=".MoontimeWidget" >
		    <intent-filter>
		        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
		    </intent-filter>
		    <meta-data android:name="android.appwidget.provider"
		               android:resource="@xml/widget_provider" />
		</receiver>

    <activity android:name="ReminderActivity"></activity>
<activity android:name="CalenderActivity"></activity>
<activity android:name="MoontimeTabActivity"></activity>
<activity android:name="com.googlecode.android.widgets.DateSlider.Demo"></activity>
</application>


<uses-sdk android:targetSdkVersion="7" android:minSdkVersion="7"></uses-sdk>
</manifest> 