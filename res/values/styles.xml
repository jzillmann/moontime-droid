<?xml version="1.0" encoding="utf-8"?>

<resources>

	<!-- removes the gradient on top of the tab-titles -->
	<style name="Theme.Tabs" parent="android:style/Theme.Black">
	    <item name="android:windowContentOverlay">@null</item>
	</style>

    <style name="Config">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
    </style>
    
   	<style name="Config.Label">
		<item name="android:textSize">18sp</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:singleLine">true</item>
    </style>
    
    <style name="DebugButton" parent="@android:style/Widget.Button.Small">
    	<item name="android:visibility">gone</item><!-- visible/gone -->
	</style>
	
</resources>
